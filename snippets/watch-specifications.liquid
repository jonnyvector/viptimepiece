{%- comment -%}
  Watch Specifications Block
  Displays watch details from product metafields in a clean table format
{%- endcomment -%}

{%- liquid
  assign has_any_specs = false
  
  if product.metafields.custom.watch_specs.reference_number != blank or product.metafields.custom.watch_specs.model_family != blank or product.metafields.custom.watch_specs.movement != blank or product.metafields.custom.watch_specs.case_material != blank or product.metafields.custom.watch_specs.bracelet_material != blank or product.metafields.custom.watch_specs.dial != blank or product.metafields.custom.watch_specs.case_dimension != blank or product.metafields.custom.watch_specs.year != blank or product.metafields.custom.watch_specs.condition != blank or product.metafields.custom.watch_specs.box_papers != blank
    assign has_any_specs = true
  endif
-%}

{%- if has_any_specs -%}
  <div class="watch-specifications{% unless block.settings.show_in_quickbuy %} not-in-quickbuy{% endunless %}" {{ block.shopify_attributes }}>
    {%- if block.settings.heading != blank -%}
      <div class="lightly-spaced-row">
        <strong role="heading" aria-level="2">{{ block.settings.heading }}</strong>
      </div>
    {%- endif -%}
    
    <div class="watch-specs-table">
      {%- if product.metafields.custom.watch_specs.reference_number != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Reference Number</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.reference_number }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.model_family != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Model Family</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.model_family }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.movement != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Movement</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.movement }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.case_material != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Case Material</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.case_material }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.bracelet_material != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Bracelet Material</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.bracelet_material }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.dial != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Dial</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.dial }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.case_dimension != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Case Dimension</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.case_dimension }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.year != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Year</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.year }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.condition != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Condition</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.condition }}</div>
        </div>
      {%- endif -%}
      
      {%- if product.metafields.custom.watch_specs.box_papers != blank -%}
        <div class="watch-spec-row">
          <div class="watch-spec-label">Box & Papers</div>
          <div class="watch-spec-value">{{ product.metafields.custom.watch_specs.box_papers }}</div>
        </div>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

<style>
  .watch-specifications {
    margin: 1rem 0;
  }
  
  .watch-specs-table {
    border-top: 1px solid var(--color-border, #e0e0e0);
  }
  
  .watch-spec-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border, #e0e0e0);
  }
  
  .watch-spec-label {
    color: var(--color-text-secondary, #666);
    font-weight: 400;
    flex: 1;
  }
  
  .watch-spec-value {
    color: var(--color-text, #000);
    font-weight: 400;
    text-align: right;
    flex: 1;
  }
  
  @media (max-width: 768px) {
    .watch-spec-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .watch-spec-value {
      text-align: left;
    }
  }
</style>