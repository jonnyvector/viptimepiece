{%- comment -%}
  Watch Specifications Block
  Displays watch details from product metafields in a clean table format
{%- endcomment -%}

{%- liquid
  assign specs_to_show = block.settings.specifications | split: ','
  assign has_any_specs = false
  
  for spec in specs_to_show
    assign trimmed_spec = spec | strip
    case trimmed_spec
      when 'reference_number'
        if product.metafields.custom.watch_specs.reference_number != blank
          assign has_any_specs = true
          break
        endif
      when 'model_family'
        if product.metafields.custom.watch_specs.model_family != blank
          assign has_any_specs = true
          break
        endif
      when 'movement'
        if product.metafields.custom.watch_specs.movement != blank
          assign has_any_specs = true
          break
        endif
      when 'case_material'
        if product.metafields.custom.watch_specs.case_material != blank
          assign has_any_specs = true
          break
        endif
      when 'bracelet_material'
        if product.metafields.custom.watch_specs.bracelet_material != blank
          assign has_any_specs = true
          break
        endif
      when 'dial'
        if product.metafields.custom.watch_specs.dial != blank
          assign has_any_specs = true
          break
        endif
      when 'case_dimension'
        if product.metafields.custom.watch_specs.case_dimension != blank
          assign has_any_specs = true
          break
        endif
      when 'year'
        if product.metafields.custom.watch_specs.year != blank
          assign has_any_specs = true
          break
        endif
      when 'condition'
        if product.metafields.custom.watch_specs.condition != blank
          assign has_any_specs = true
          break
        endif
      when 'box_papers'
        if product.metafields.custom.watch_specs.box_papers != blank
          assign has_any_specs = true
          break
        endif
    endcase
  endfor
-%}

{%- if has_any_specs -%}
  <div class="watch-specifications{% unless block.settings.show_in_quickbuy %} not-in-quickbuy{% endunless %}" {{ block.shopify_attributes }}>
    {%- if block.settings.heading != blank -%}
      <div class="lightly-spaced-row">
        <strong role="heading" aria-level="2">{{ block.settings.heading }}</strong>
      </div>
    {%- endif -%}
    
    <div class="watch-specs-table">
      {%- for spec in specs_to_show -%}
        {%- assign trimmed_spec = spec | strip -%}
        {%- liquid
          assign spec_label = ''
          assign spec_value = ''
          
          case trimmed_spec
            when 'reference_number'
              assign spec_label = 'Reference Number'
              assign spec_value = product.metafields.custom.watch_specs.reference_number
            when 'model_family'
              assign spec_label = 'Model Family'
              assign spec_value = product.metafields.custom.watch_specs.model_family
            when 'movement'
              assign spec_label = 'Movement'
              assign spec_value = product.metafields.custom.watch_specs.movement
            when 'case_material'
              assign spec_label = 'Case Material'
              assign spec_value = product.metafields.custom.watch_specs.case_material
            when 'bracelet_material'
              assign spec_label = 'Bracelet Material'
              assign spec_value = product.metafields.custom.watch_specs.bracelet_material
            when 'dial'
              assign spec_label = 'Dial'
              assign spec_value = product.metafields.custom.watch_specs.dial
            when 'case_dimension'
              assign spec_label = 'Case Dimension'
              assign spec_value = product.metafields.custom.watch_specs.case_dimension
            when 'year'
              assign spec_label = 'Year'
              assign spec_value = product.metafields.custom.watch_specs.year
            when 'condition'
              assign spec_label = 'Condition'
              assign spec_value = product.metafields.custom.watch_specs.condition
            when 'box_papers'
              assign spec_label = 'Box & Papers'
              assign spec_value = product.metafields.custom.watch_specs.box_papers
          endcase
        -%}
        
        {%- if spec_value != blank -%}
          <div class="watch-spec-row">
            <div class="watch-spec-label">{{ spec_label }}</div>
            <div class="watch-spec-value">{{ spec_value }}</div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

<style>
  .watch-specifications {
    margin: 1rem 0;
  }
  
  .watch-specs-table {
    border-top: 1px solid var(--color-border, #e0e0e0);
  }
  
  .watch-spec-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border, #e0e0e0);
  }
  
  .watch-spec-label {
    color: var(--color-text-secondary, #666);
    font-weight: 400;
    flex: 1;
  }
  
  .watch-spec-value {
    color: var(--color-text, #000);
    font-weight: 400;
    text-align: right;
    flex: 1;
  }
  
  @media (max-width: 768px) {
    .watch-spec-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .watch-spec-value {
      text-align: left;
    }
  }
</style>