{% doc %}
  @prompt
    padding between sections--should have desktop and mobile selector

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-section-padding-{{ ai_gen_id }} {
    padding-top: {{ block.settings.padding_top_desktop }}px;
    padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-section-padding-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
    }
  }

  .ai-section-padding__content-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-section-padding__placeholder-{{ ai_gen_id }} {
    background-color: #f8f8f8;
    border: 2px dashed #d0d0d0;
    border-radius: 8px;
    padding: 60px 20px;
    text-align: center;
    color: #666;}

  .ai-section-padding__placeholder-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px;
  }

  .ai-section-padding__placeholder-text-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0;opacity: 0.8;
  }
{% endstyle %}

<div class="ai-section-padding-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-section-padding__content-{{ ai_gen_id }}">
    <div class="ai-section-padding__placeholder-{{ ai_gen_id }}">
      <h3 class="ai-section-padding__placeholder-title-{{ ai_gen_id }}">Section padding spacer</h3>
      <p class="ai-section-padding__placeholder-text-{{ ai_gen_id }}">
        This block adds customizable padding between sections. Configure the spacing in the block settings.
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Section padding",
  "settings": [
    {
      "type": "header",
      "content": "Desktop padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    },
    {
      "type": "header",
      "content": "Mobile padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Section padding"
    }
  ],
  "tag": null
}
{% endschema %}